{
  "$schema": "https://json.schemastore.org/tsconfig",
  "name": "@opencode/tsconfig/lib",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["esnext"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "removeComments": false,
    "composite": true,
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
