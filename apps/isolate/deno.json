{
  "nodeModulesDir": "none",
  "unstable": [
    "worker-options"
  ],
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read=./src,.env --env-file=.env --watch src/server.ts"
  },
  "imports": {
    "nanoid": "npm:nanoid@5.1.6",
    "hono": "npm:hono@4.4.11",
    "errorish": "npm:errorish@2.0.0",
    "drizzle-orm": "npm:drizzle-orm@0.45.1",
    "postgres": "npm:postgres@3.4.7",
    "@opencode/plugable": "../../packages/plugable/src/index.ts"
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "deno.worker",
      "esnext"
    ],
    "strict": true
  },
  "lock": true,
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  }
}
